  <script>
    function analyzeUIBugs() {
      const url = document.getElementById("websiteUrl").value;
      if (url.trim() === "") {
        alert("Please enter a website URL.");
        return;
      }

      // Placeholder: Redirect or send to your dashboard logic
      // Example: Redirect to dashboard.html?url=entered_url
      window.location.href = dashboard.html?url=${encodeURIComponent(url)};
    }
